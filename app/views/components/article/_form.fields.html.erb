<div class="field">
    <%= form.label :title, class: :label %>
    <div class="control">
        <%= form.text_field :title, autocomplete: :off, class: :input, maxlength: 30 %>
    </div>
</div>

<div class="field">
    <%= form.label :Body, class: :label %>
    <div class="control">
        <%= form.text_area :body, autocomplete: :off, class: "textarea textarea-custom", maxlength: 1000 %>
    </div>
</div>

<div class="field">
  <div class="control">
    <div class="file">
      <label class="file-label">
        <%= form.file_field :image, class: "file-input" %>
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
          <span class="file-label">
            Choose a fileâ€¦
          </span>
        </span>
      </label>
    </div>
  </div>
</div>

<div class="field">

    <% if action == 'new' %>
    <%= form.button class: 'button is-primary', title: 'Post Article' do %>
        <i class="fas fa-paper-plane mr-3"></i> Post
    <% end %>
    <% end %>

    <% if action == 'edit' %>
    <%= form.button class: 'button is-primary',  title: 'Update Article' do %>
        <i class="fas fa-edit mr-3"></i> Update
    <% end %>
    <% end %>

    <%= link_to :Cancel, root_path, class: "button is-warning" %>

</div>